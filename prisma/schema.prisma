datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Player {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  ranking   Int
  school    String
  position  String
  schoolLogo String
  playerImage String
  year      String
 draftPick   DraftPick?  //Relatio, Player-Pick
}

model DraftPick {
  id        Int       @id @default(autoincrement())
  round     Int
  pick      Int
  teamId    Int
  team      Team      @relation(fields: [teamId], references: [id])
  playerId  Int?      @unique
  player    Player?   @relation(fields: [playerId], references: [id])
}

model Team {
  id         Int        @id @default(autoincrement())
  name       String
  logo       String?
  draftPicks DraftPick[]
}

